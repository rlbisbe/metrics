<UserControl
    x:Class="Metrics.Privacy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Metrics"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Background="DarkSlateBlue">
        <StackPanel.Transitions>
            <TransitionCollection>
                <PaneThemeTransition/>
              </TransitionCollection>
        </StackPanel.Transitions>
        <TextBlock x:Uid="PrivacyTitle" Style="{StaticResource SnappedPageHeaderTextStyle}" Margin="20,20,18,40">Privacy Statement</TextBlock>
        <TextBlock x:Uid="PrivacyText" Style="{StaticResource ItemTextStyle}" Margin="20,0" CharacterSpacing="5" FontSize="16">The Metrics app asks for personal information (such as Wordpress API Key) for accesing the data in the different web services. This information is stored internally in the app user space, so it's never shared outside the user's computer or with other apps.
        </TextBlock>
    </StackPanel>
</UserControl>
